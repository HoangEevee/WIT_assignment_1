<h2 class="center">All patients</h2>
<h3 class="center">{{today}}</h3>
<div class="tablecontainer">
    <table class="table">
        <thead> 
            <tr>
                <th>Patient Name</th>
                <th>Blood Glucose (mmol/L)</th> 
                <th>Weight (kg)</th>
                <th>Insulin (no. of doses)</th>
                <th>Exercise (step count)</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td data label = "Patient Name">
                    <div class="profile-container">
                        <img src="\img\profile-pic.jpg" alt="profile pic" class="profile-pic small-screen-disappear">
                        <a href="./{{this._id}}">{{this.firstName}} {{this.lastName}}</a>
                    </div>
                </td>
                {{#unless ../glucoseRecord}}

                {{/unless}}

                {{#with this.timeseries}}
                <td data label = "Blood Glucose (mmol/L)"{{#if (outOfThreshold this.glucose.value ../glucoseThreshold.lower ../glucoseThreshold.upper)}} class="red" {{/if}}>
                
                {{#if (upToDate this.glucose this.date today)}}
                
                {{this.glucose.value}}
                </td>
                {{/if}}
                {{/with}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>        
