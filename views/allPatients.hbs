<h2 class="center">All patients</h2>

<div class="tablecontainer">
    <table class="table">
        <thead> 
            <tr>
                <th>Patient Name</th>
                <th>Last Updated</th>
                <th>Blood Glucose (mmol/L)</th> 
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td data label = "Patient Name"><a href="./{{this._id}}">{{this.patient}}</a></td>
                {{#each this.timestamp}}
                {{#if @last}}
                <td data label = "Last Updated">{{this.time}}</td>
                <td data label = "Blood Glucose (mmol/L)"{{#if (outOfThreshold this.glucose ../glucose.lower ../glucose.upper)}} class="red" {{/if}}>{{this.glucose}}</td>
                {{/if}}
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>        
