<h2 class="center">All patients</h2>

<div class="tablecontainer">
    <table class="table">
        <thead> 
            <tr>
                <th>Patient Name</th>
                <th>Last Updated</th>
                <th>Blood Glucose (mmol/L)</th> 
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td data label = "Patient Name">
                    <div class="profile-container">
                        <img src="\img\profile-pic.jpg" alt="profile pic" class="profile-pic small-screen-disappear">
                        <a href="./{{this._id}}">{{this.firstName}} {{this.lastName}}</a>
                    </div>
                </td>
                {{#each this.glucoseTimestamp}}
                {{#if @last}}
                <td data label = "Last Updated">{{this.time}}</td>
                <td data label = "Blood Glucose (mmol/L)"{{#if (outOfThreshold this.value ../glucoseThreshold.lower ../glucoseThreshold.upper)}} class="red" {{/if}}>{{this.value}}</td>
                {{/if}}
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>        
