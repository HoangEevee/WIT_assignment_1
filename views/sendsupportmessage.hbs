
<h2 class="center"> Update Support Message for Patient </h2>

<section>
  <p class="center">Send a new patient support message and it will be updated on their account</p>
    <form action="/clinician/{{data._id}}/send-support-messages" method="POST">
        <div class="container">
            <div class="child_container">
                {{!-- <label for="uname"><h4>Username</h4></label> --}}
                <input type="text" placeholder="Enter a new support message" name="supportmessage" required>
                <button type="submit">Update Support Message</button>
            </div>
            {{#each flash}}
            <p class="red">{{this}}</p>
            {{/each}}
        </div>
    </form> 
</section>


         