<h2 class="center"> View Support Messages </h2>

<div class="tablecontainer">
    <table class="table">
        <thead>
            <tr>
                <th>Clinician Name</th>
                <th>Time</th>
                <th>Support Message</th> 
            </tr>
        </thead>
        
        <tbody>
            {{#each data}}
            <tr>
                <td data label = "Clinician name">
                    <div class="profile-container">
                        <img src="\img\profile-pic.jpg" alt="profile pic" class="profile-pic small-screen-disappear">
                        <a href="./{{this._id}}">{{this.firstName}} {{this.lastName}}</a>
                    </div>
                </td>
                <td data label = "Time">{{this.time}}</td>
                <td data label = "Support Message">{{this.message}}</td> 
            </tr>
            {{/each}}
        </tbody>    
        
    </table>
</div>   