<div class="container">
    <h2 class="center">{{data.patient}}'s Health Record </h2>

    <h2>Glucose Record</h2>
    <div class="bigcontainer">
        <div class="child_container">
            <p>Lower Threshold: {{data.glucose.lower}}</p>
            <form action="./{{data._id}}" method="POST">    
                <div class="container">
                    <input type="text" placeholder="Update lower threshold" name="updateLowerThreshold" required>
                    <button type="submit">Update</button>        
                </div>
            </form> 
        </div>
        <div class="child_container">
            <p>Upper Threshold: {{data.glucose.upper}}</p>
            <form action="./{{data._id}}" method="POST">    
                <div class="container">
                    <input type="text" placeholder="Update upper threshold" name="updateUpperThreshold" required>
                    <button type="submit">Update</button>        
                </div>
            </form> 
        </div>
    </div>
    

    <div class="tablecontainer">
        <table class="table">
            <thead> 
                <tr>
                    <th>Time</th>
                    <th>Blood Glucose (mmol/L)</th> 
                </tr>
            </thead>
            <tbody>
                {{#with data}}
                {{#each timestamp}}
                <tr>
                    <td data label = "Time">{{this.time}}</td>
                    <td data label = "Blood Glucose (mmol/L)"{{#if (outOfThreshold this.glucose ../glucose.lower ../glucose.upper)}} class="red" {{/if}}>{{this.glucose}}</td> 
                </tr>
                {{/each}}
                {{/with}}
            </tbody>
        </table>
    </div>    


</div>
