<div class="container">
    <h2 class="center">{{data.firstName}} {{data.lastName}}'s Health Record </h2>

    <p>Chosen timeseries<br>
        {{#if data.glucoseRecord}}
        Glucose<br>
        {{/if}}
        {{#if data.weightRecord}}
        Weight<br>
        {{/if}}
        {{#if data.insulinRecord}}
        Insulin<br>
        {{/if}}
        {{#if data.exerciseRecord}}
        exerciseRecord<br>
        {{/if}}
        
    </p>
    
    <button onclick= window.location.href="/clinician/{{data._id}}/set-timeseries">Set Timeseries</button>

    <h2>Glucose Record</h2>
    <div class="bigcontainer">
        <div class="child_container">
            <p>Lower Threshold: {{data.glucoseThreshold.lower}}</p>
            <form action="./{{data._id}}" method="POST">    
                <div class="container">
                    <input type="text" placeholder="Update lower threshold" name="updateLowerThreshold" required>
                    <button type="submit">Update</button>        
                </div>
            </form> 
        </div>
        <div class="child_container">
            <p>Upper Threshold: {{data.glucoseThreshold.upper}}</p>
            <form action="./{{data._id}}" method="POST">    
                <div class="container">
                    <input type="text" placeholder="Update upper threshold" name="updateUpperThreshold" required>
                    <button type="submit">Update</button>        
                </div>
            </form> 
        </div>
    </div>
    

    <div class="tablecontainer">
        <table class="table">
            <thead> 
                <tr>
                    <th>Time</th>
                    <th>Blood Glucose (mmol/L)</th> 
                </tr>
            </thead>
            <tbody>
                {{#with data}}
                {{#each glucoseTimestamp}}
                <tr>
                    <td data label = "Time">{{this.time}}</td>
                    <td data label = "Blood Glucose (mmol/L)"{{#if (outOfThreshold this.value ../glucoseThreshold.lower ../glucoseThreshold.upper)}} class="red" {{/if}}>{{this.value}}</td> 
                </tr>
                {{/each}}
                {{/with}}
            </tbody>
        </table>
    </div>    


</div>
