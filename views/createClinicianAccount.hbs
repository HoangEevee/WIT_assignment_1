<h2 class="center">Create new account</h2>

<section>
    <p class="center">Put your information below</p>

    <form action="/clinician/create-clinician" method="POST">
            <h4>Title</h4>
            <select type="text" id="title" name="title"/>
                <option hidden selected>Select one...</option>
                <option value="dr">Dr.</option>
                <option value="mr">Mr.</option>
                <option value="miss">Miss</option>
                <option value="mrs">Mrs.</option>
                <option value="ms">Ms.</option>
                <option value="mx">Mx.</option>
                <option value="other">other</option>
            </select>
            <br>
            <h4>First name</h4>
            <input type="text" id="firstName" name="firstName" placeholder="Enter first name" required/>
            <br>
            <h4>Last name</h4>
            <input type="text" id="lastName" name="lastName" placeholder="Enter last name" required/>
            <br>
            <h4>Date of birth</h4>
            <input type="text" id="dob" name="dob" placeholder="Enter date of birth" required/>
            <br>
            <h4>Email</h4>
            <input type="text" id="email" name="email" placeholder="Enter email" required/>
            <br>
            <h4>Alt. email</h4>
            <input type="text" id="emailAlt" name="emailAlt" placeholder="Enter alt. email"/>
            <br>
            <h4>Contact number</h4>
            <input type="text" id="contactNumber" name="contactNumber" placeholder="Enter contact number" required/>
            <br>
            <br>
            <input type="submit"/>
    </form>
</section>