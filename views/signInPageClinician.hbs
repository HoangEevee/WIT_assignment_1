<h2 class="center">CLINICIAN SIGN IN</h2> 

<section>
    <p class="center">Please sign in with your personal details including your email and your password</p>
    <form action="./clinician/login" method="POST">

        <div class="container">
            <div class="child_container">
                <input type="text" placeholder="Username / email" name="username" required>
                <input type="password" placeholder="Password" name="password" required>
                <button type="submit">Login</button>
            </div>
        </div>
        
        <div class="container" style="background-color:#ffffff">
            <div class="child_container">
                <span class="psw1"><a href="#">Forgot password?</a></span>
                <span class="psw2"><a href="#">Need help?</a></span>
            </div>
        </div>
    </form>

</section>